@{
    ViewBag.Title = "Product Detail";
    var productId = ViewBag.ProductId as string; // Lấy ProductId từ Controller
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/css/detailproduct.css" />
    <script src="~/js/detailProduct.js"></script>

   
</head>
<body>
    <div class="product-detail">
        <h1>Product Details</h1>
        <div id="product-data" data-product-id="@ViewBag.ProductId"></div>
        <div id="product-info">
            <!-- Thông tin chi tiết sản phẩm sẽ được tải bằng AJAX -->
        </div>
        <button class="btn-back" onclick="window.history.back();">Back to Products</button>
    </div>

</body>
</html>
