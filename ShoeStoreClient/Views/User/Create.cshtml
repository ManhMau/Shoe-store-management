@{
    ViewBag.Title = "Create User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/css/createUser.css" />
    <script src="~/js/creatteUser.js"></script>

</head>
<body>
    <h1 style="text-align: center">@ViewBag.Title</h1>

    <form id="create-user-form">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" />
        <span id="username-error" class="error-message" style="color:red;"></span><br> 

        <label for="email">Email</label>
        <input type="email" id="email" name="email" />
        <span id="email-error" class="error-message" style="color:red;"></span><br> 

        <label for="phone">Phone Number</label>
        <input type="tel" id="phone" name="phone" />
        <span id="phone-error" class="error-message" style="color:red;"></span><br> 

        <label for="password">Password</label>
        <input type="password" id="password" name="password" />
        <span id="password-error" class="error-message" style="color:red;"></span><br> 

        <label for="role">Role</label>
        <select id="role" name="role">
            <option value="1">Admin</option>
            <option value="2">User</option>
        </select>
        <span id="role-error" class="error-message" style="color:red;"></span><br> 

        <button type="submit" class="btn-save">Create User</button>
    </form>

</body>
</html>
