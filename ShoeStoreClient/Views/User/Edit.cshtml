@{
    ViewBag.Title = "Edit User";
    var userId = ViewBag.UserId as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/css/edittUser.css" />
    <script src="~/js/editUser.js"></script>

</head>
<body>
    <div id="user-data" data-user-id="@ViewBag.UserId"></div>
    <h1>@ViewBag.Title</h1>

    <form id="edit-user-form">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" />
        <span id="username-error" class="error-message" style="color:red;"></span><br> 

        <label for="email">Email</label>
        <input type="email" id="email" name="email" />
        <span id="email-error" class="error-message" style="color:red;"></span><br> 

        <label for="phoneNumber">Phone Number</label>
        <input type="tel" id="phoneNumber" name="phoneNumber" />
        <span id="phoneNumber-error" class="error-message" style="color:red;"></span><br> 

        <label for="address">Address</label>
        <input type="text" id="address" name="address" />
        <span id="address-error" class="error-message" style="color:red;"></span><br> 

        <label for="roleId">Role</label>
        <select id="roleId" name="roleId">
        </select>
        <span id="roleId-error" class="error-message" style="color:red;"></span><br> 

        <label for="password">Password</label>
        <input type="password" id="password" name="password" readonly />

        <button type="submit" class="btn-save">Save Changes</button>
        <button type="button" onclick="window.location.href='/User';" class="btn-cancel">Cancel</button>
    </form>
    
</body>
</html>
